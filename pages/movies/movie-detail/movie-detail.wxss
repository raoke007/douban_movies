@import '../stars/stars-template.wxss';

.container {
  display: flex;
  flex-direction: column;
}

.head-img {
  width: 100%;
  height: 320rpx;
  -webkit-filter:  blur(20px);
}

.head-img-hover {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
}

.head-text {
  font-size: 19px;
  color: #fff;
  font-weight: bold;
  letter-spacing: 2px;
  margin-top: 50rpx;
  margin-left: 40rpx;
}

.country-year {
  font-size: 28rpx;
  color: #fff;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.like-comment {
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  margin-left: 40rpx;
}

.highlight-font {
  color: #f21146;
  font-size: 22rpx;
  margin-right: 10rpx;
}

.text-font {
  color: #666;
  font-size: 22rpx;
  margin-right: 30rpx;
}

.movie-img {
  position: absolute;
  top: 160rpx;
  right: 30rpx;
  width: 175rpx;
  height: 238rpx;
  /* width: 200rpx;
  height: 270rpx; */
}

.summary {
  margin-left: 40rpx;
  margin-top: 40rpx;
  color: #777777;
}

.original-title {
  font-size: 24rpx;
  color: #1f3463;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.mark {
  margin-right: 30rpx;
  white-space: nowrap;
  color: #999999;
}

.hr {
  width: 100%;
  height: 1px;
  margin-top: 45rpx;
  background-color:#d9d9d9;
}

.synopsis {
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  margin-top: 50rpx;
}

.synopsis-text {

}

.summary-content {
  margin-top: 20rpx;
  margin-right: 40rpx;
  line-height: 40rpx;
  letter-spacing: 1px;
}