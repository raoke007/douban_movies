/* posts */
.post-container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-date {
  margin-top: 5px;
  margin-bottom: 10px;
  margin-left: 10rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
  margin-bottom: 5px;
}

.post-title {
  margin-left: 10px;
  margin-bottom: 10px;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.post-image {
  /* margin-left: 16px; */
  width: 100%;
  height: 340rpx;
  /* margin: auto 0; */
  margin-bottom: 15px;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 10px;
  margin-left: 10px;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-num {
  vertical-align: middle;
  margin-right: 20px;
}